{
  "compilerOptions": {
    "sourceMap": false,
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "typeRoots": ["node_modules/@types", "src/types"],
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "./dist",
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
}
